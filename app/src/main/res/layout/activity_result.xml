<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity4"
    tools:context=".Result">

    <TextView
        android:id="@+id/tv_r1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:text="Congratulation"
        android:textColor="#012094"
        android:textStyle="bold"
        android:textSize="35sp"
        android:layout_marginTop="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.080"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.197"/>

    <TextView
        android:id="@+id/tv_r2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Nama"
        android:textColor="#012094"
        android:textStyle="bold"
        android:textSize="35sp"
        android:layout_marginLeft="140dp"
        android:paddingTop="75dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_r1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.080"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.197"/>

    <TextView
        android:id="@+id/tv_r3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Country"
        android:textColor="#012094"
        android:textStyle="bold"
        android:textSize="35sp"
        android:layout_marginLeft="128dp"
        android:paddingTop="170dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_r2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.080"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.197"/>

    <TextView
        android:id="@+id/tv_r4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="email"
        android:textColor="#012094"
        android:textStyle="bold"
        android:textSize="35sp"
        android:layout_marginLeft="140dp"
        android:paddingTop="250dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_r3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.080"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.197"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_LO"
        android:layout_width="333dp"
        android:layout_height="55dp"
        android:layout_marginTop="35dp"
        android:backgroundTint="#012094"
        android:text="LOG OUT"
        android:textColor="@color/white"
        app:cornerRadius="32dp"
        app:layout_constraintTop_toBottomOf="@id/tv_r4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>